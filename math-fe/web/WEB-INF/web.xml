<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
  <mime-mapping>
    <extension>clj</extension>
    <mime-type>text/plain;charset=UTF-8</mime-type>
  </mime-mapping>
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
  </welcome-file-list>
  <servlet>
    <servlet-name>hello</servlet-name>
    <servlet-class>net.littleredcomputer.math.api.HelloServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>howdy</servlet-name>
    <servlet-class>net.littleredcomputer.math.api.HowdyServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>api</servlet-name>
    <servlet-class>net.littleredcomputer.math.api.ApiServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>hello</servlet-name>
    <url-pattern>/hello</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>howdy</servlet-name>
    <url-pattern>/howdy</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>api</servlet-name>
    <url-pattern>/api/*</url-pattern>
  </servlet-mapping>
</web-app>
