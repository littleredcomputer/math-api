<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
    <mime-mapping>
        <extension>clj</extension>
        <mime-type>text/plain;charset=UTF-8</mime-type>
    </mime-mapping>
    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>
    <servlet>
        <servlet-name>pendulum</servlet-name>
        <servlet-class>net.littleredcomputer.math.api.pendulum</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>rigid</servlet-name>
        <servlet-class>net.littleredcomputer.math.api.rigid</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>pendulum</servlet-name>
        <url-pattern>/api/sicm/pendulum/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>rigid</servlet-name>
        <url-pattern>/api/sicm/rigid/*</url-pattern>
    </servlet-mapping>
</web-app>